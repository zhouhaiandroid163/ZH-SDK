<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="PointView">
        <attr name="color_point" format="color|reference" />
    </declare-styleable>

    <style name="public_text_color">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">100dip</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">#605bff</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="public_button">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="public_textview01">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#2A2A2C</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="public_textview02">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#565454</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="public_textview03">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="android:hint">@string/input_hint_tip</item>
        <item name="android:textColorHint">#A2CCE4</item>
    </style>

    <style name="public_checkbox">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#2A2A2C</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#f0f0f0</item>
    </style>

    <style name="public_lin01">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">#d9e6fb</item>
    </style>

    <style name="public_lin02">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#fbd9d9</item>
    </style>

    <style name="public_input_lin">
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#f0f0f0</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="public_edit_number">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="android:hint">@string/input_hint_tip</item>
        <item name="android:textColorHint">#A2CCE4</item>
    </style>

    <style name="public_edit_str">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="android:hint">@string/input_hint_tip</item>
        <item name="android:textColorHint">#A2CCE4</item>
    </style>

    <style name="help_ll">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/color_F0F0F0</item>
    </style>

    <style name="help_cx">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/color_888888</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/color_D3D3D3</item>
    </style>

    <style name="help_iv">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@android:drawable/ic_menu_help</item>
    </style>

</resources>
