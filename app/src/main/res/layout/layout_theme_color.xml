<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:colorRoundAttr="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="2dp">

        <com.zjw.sdkdemo.ui.view.ColorRoundView
            android:id="@+id/colorRoundView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            colorRoundAttr:bgColor="@android:color/white"
            colorRoundAttr:ringColor="#dddddd" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivColorBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</LinearLayout>
