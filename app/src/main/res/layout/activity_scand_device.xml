<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat style="@style/public_input_lin">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/public_textview01"
            android:text="@string/input_filter" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etSearch"
            style="@style/public_edit_str" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <ListView
        android:id="@+id/lvDevice"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        tools:listitem="@layout/list_item_device" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginBottom="20.dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnStart"
            style="@style/public_button"
            android:layout_weight="1"
            android:text="@string/scan_start" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnStop"
            style="@style/public_button"
            android:layout_weight="1"
            android:text="@string/scan_stop" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>