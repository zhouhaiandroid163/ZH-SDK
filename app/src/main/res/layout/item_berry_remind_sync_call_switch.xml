<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout style="@style/help_ll">

        <CheckBox
            android:id="@+id/cbTop"
            style="@style/help_cx"
            android:text="@string/reminder_set_call_notice_switch_berry" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivHelp"
            style="@style/help_iv" />

    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llBottom"
        style="@style/public_lin01"
        tools:visibility="gone">

        <CheckBox
            android:id="@+id/cbCallNoticeSwitch"
            style="@style/public_checkbox"
            android:text="@string/call_notice_switch" />

        <CheckBox
            android:id="@+id/cbMissNoticeSwitch"
            style="@style/public_checkbox"
            android:text="@string/miss_notice_switch" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSimultaneouslySetWitch"
            style="@style/public_button"
            android:text="@string/simultaneously_set_switch" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>